---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Image Upscaler - Variety Gifts Unlimited"
  hideHeader={false}
  hideFooter={false}
>
  <main class="min-h-screen w-full overflow-x-hidden relative">
    <section
      class="min-h-screen upscaler-section relative py-8 px-4 sm:py-12 sm:px-6 md:px-12 lg:px-24 bg-gradient-to-br from-indigo-900 via-purple-900 to-violet-900 min-h-screen"
    >
      <div class="max-w-4xl mx-auto relative z-10">
        <div class="text-center mb-8 sm:mb-12">
          <h1
            class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold mb-4 text-purple-100 drop-shadow-lg"
          >
            Image Upscaler
          </h1>
          <p class="text-purple-200 text-base sm:text-lg drop-shadow-md mb-4">
            AI-Powered Image Enhancement with Topaz
          </p>
          <a
            href="/backroom"
            class="inline-block bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-semibold py-2 px-4 sm:px-6 rounded-xl transition duration-300 shadow-lg transform hover:scale-105 text-sm sm:text-base"
          >
            Go to Image Generator
          </a>
        </div>

        <div
          class="bg-gradient-to-br from-purple-50 via-indigo-50 to-violet-50 rounded-2xl p-4 sm:p-6 md:p-8 shadow-2xl border-4 border-purple-200/50 backdrop-blur-sm"
        >
          <!-- API Key Section -->
          <div class="mb-6 sm:mb-8">
            <label
              for="apiKey"
              class="block text-purple-900 text-base sm:text-lg font-semibold mb-2 drop-shadow-sm"
            >
              Fal API Key
            </label>
            <input
              type="password"
              id="apiKey"
              class="w-full p-3 sm:p-4 rounded-xl bg-gradient-to-r from-purple-100 to-indigo-100 text-purple-900 border-2 border-purple-300 focus:border-violet-500 focus:outline-none shadow-lg placeholder-purple-600 text-sm sm:text-base"
              placeholder="Enter your Fal API key..."
            />
          </div>

          <!-- Image Upload -->
          <div class="mb-6">
            <label
              for="imageUpload"
              class="block text-purple-900 text-base sm:text-lg font-semibold mb-2 drop-shadow-sm"
            >
              Image to Upscale
            </label>
            <div
              class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 sm:gap-4"
            >
              <input
                type="file"
                id="imageUpload"
                accept="image/*"
                class="flex-shrink-0 file:mr-3 sm:file:mr-4 file:py-2 file:px-3 sm:file:px-4 file:rounded-lg file:border-0 file:text-xs sm:file:text-sm file:font-semibold file:bg-purple-200 file:text-purple-900 hover:file:bg-purple-300 w-full sm:w-auto"
              />
              <div
                id="pasteArea"
                class="paste-area flex-1 p-3 sm:p-4 rounded-xl bg-gradient-to-r from-purple-100 to-indigo-100 text-purple-900 border-2 border-purple-300 shadow-lg text-center text-sm sm:text-base cursor-pointer hover:bg-purple-200 transition-colors"
              >
                Or paste image from clipboard
              </div>
            </div>
            <!-- Image Preview -->
            <div id="imagePreview" class="mt-4 hidden">
              <img
                id="previewImg"
                src=""
                alt="Preview"
                class="max-w-full max-h-64 rounded-lg border-2 border-purple-300 shadow-md mx-auto"
              />
              <button
                id="clearImage"
                class="mt-2 bg-red-500 hover:bg-red-600 text-white py-1 px-3 rounded-lg text-sm transition-colors"
              >
                Clear Image
              </button>
            </div>
          </div>

          <!-- Model Selection -->
          <div class="mb-6">
            <label
              for="model"
              class="block text-purple-900 text-base sm:text-lg font-semibold mb-2 drop-shadow-sm"
            >
              Upscaler Model
            </label>
            <select
              id="model"
              class="w-full p-3 sm:p-4 rounded-xl bg-gradient-to-r from-purple-100 to-indigo-100 text-purple-900 border-2 border-purple-300 focus:border-violet-500 focus:outline-none shadow-lg text-sm sm:text-base"
            >
              <option value="Standard V2" selected
                >Standard V2 (Recommended)</option
              >
              <option value="Standard V1">Standard V1</option>
              <option value="High Fidelity V2">High Fidelity V2</option>
              <option value="High Fidelity V1">High Fidelity V1</option>
              <option value="Graphics">Graphics</option>
              <option value="Low Resolution V2">Low Resolution V2</option>
              <option value="Low Resolution">Low Resolution</option>
              <option value="Text Refine">Text Refine</option>
              <option value="CGI">CGI</option>
            </select>
          </div>

          <!-- Upscale Factor -->
          <div class="mb-6">
            <label
              for="upscaleFactor"
              class="block text-purple-900 text-base sm:text-lg font-semibold mb-2 drop-shadow-sm"
            >
              Upscale Factor
            </label>
            <select
              id="upscaleFactor"
              class="w-full p-3 sm:p-4 rounded-xl bg-gradient-to-r from-purple-100 to-indigo-100 text-purple-900 border-2 border-purple-300 focus:border-violet-500 focus:outline-none shadow-lg text-sm sm:text-base"
            >
              <option value="2" selected>2x</option>
              <option value="4">4x</option>
            </select>
          </div>

          <!-- Output Format -->
          <div class="mb-6">
            <label
              for="outputFormat"
              class="block text-purple-900 text-base sm:text-lg font-semibold mb-2 drop-shadow-sm"
            >
              Output Format
            </label>
            <select
              id="outputFormat"
              class="w-full p-3 sm:p-4 rounded-xl bg-gradient-to-r from-purple-100 to-indigo-100 text-purple-900 border-2 border-purple-300 focus:border-violet-500 focus:outline-none shadow-lg text-sm sm:text-base"
            >
              <option value="png" selected>PNG</option>
              <option value="jpeg">JPEG</option>
              <option value="webp">WebP</option>
            </select>
          </div>

          <!-- Face Enhancement -->
          <div class="mb-6">
            <label class="flex items-center gap-3 cursor-pointer">
              <input
                type="checkbox"
                id="faceEnhancement"
                class="w-5 h-5 rounded border-purple-300 text-purple-600 focus:ring-purple-500"
                checked
              />
              <span class="text-purple-900 text-base sm:text-lg font-semibold">
                Face Enhancement
              </span>
            </label>
            <div id="faceStrengthContainer" class="mt-3">
              <label
                for="faceStrength"
                class="block text-purple-700 text-sm font-medium mb-2"
              >
                Face Enhancement Strength: <span id="faceStrengthValue"
                  >0.8</span
                >
              </label>
              <input
                type="range"
                id="faceStrength"
                min="0"
                max="1"
                step="0.1"
                value="0.8"
                class="w-full h-2 bg-purple-200 rounded-lg appearance-none cursor-pointer"
              />
            </div>
          </div>

          <!-- Upscale Button -->
          <div class="text-center mb-6 sm:mb-8">
            <button
              id="upscaleBtn"
              class="bg-gradient-to-r from-purple-600 to-violet-600 hover:from-purple-700 hover:to-violet-700 text-white font-bold py-3 px-6 sm:py-4 sm:px-10 rounded-2xl transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed shadow-xl transform hover:scale-105 text-sm sm:text-base"
            >
              Upscale Image
            </button>
          </div>

          <!-- Status Message -->
          <div
            id="status"
            class="text-center mb-4 sm:mb-6 text-purple-900 font-semibold drop-shadow-sm text-sm sm:text-base"
          >
          </div>

          <!-- Output Image -->
          <div id="outputContainer" class="hidden">
            <h3
              class="text-purple-900 text-lg sm:text-xl font-semibold mb-4 text-center"
            >
              Upscaled Result
            </h3>
            <div class="relative">
              <img
                id="outputImage"
                src=""
                alt="Upscaled Image"
                class="max-w-full rounded-xl border-4 border-purple-300 shadow-2xl mx-auto cursor-pointer"
              />
              <div class="flex flex-wrap justify-center gap-3 mt-4">
                <button
                  id="copyUrlBtn"
                  class="bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-2 px-4 sm:px-6 rounded-xl transition duration-300 shadow-lg transform hover:scale-105 text-sm sm:text-base"
                >
                  Copy URL
                </button>
                <button
                  id="downloadBtn"
                  class="bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-semibold py-2 px-4 sm:px-6 rounded-xl transition duration-300 shadow-lg transform hover:scale-105 text-sm sm:text-base"
                >
                  Download Image
                </button>
                <button
                  id="copyImageBtn"
                  class="bg-gradient-to-r from-purple-500 to-violet-500 hover:from-purple-600 hover:to-violet-600 text-white font-semibold py-2 px-4 sm:px-6 rounded-xl transition duration-300 shadow-lg transform hover:scale-105 text-sm sm:text-base"
                >
                  Copy Image
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Fullscreen Modal -->
    <div
      id="fullscreenModal"
      class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden flex items-center justify-center"
    >
      <div class="relative max-w-full max-h-full p-4">
        <img
          id="fullscreenImage"
          src=""
          alt=""
          class="max-w-full max-h-full object-contain"
        />
        <button
          id="closeFullscreen"
          class="absolute top-4 right-4 bg-red-500 hover:bg-red-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold shadow-lg transition-colors"
        >
          Ã—
        </button>
      </div>
    </div>
  </main>
</Layout>

<style>
  .upscaler-section {
    display: flex;
    align-items: flex-start;
    position: relative;
    overflow: hidden;
  }

  .upscaler-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(
        circle at 20% 80%,
        rgba(139, 92, 246, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(99, 102, 241, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 40% 40%,
        rgba(124, 58, 237, 0.05) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .upscaler-section {
      padding-top: 6rem;
    }
  }

  /* Fullscreen modal styles */
  #fullscreenModal {
    backdrop-filter: blur(4px);
  }

  #fullscreenImage {
    max-width: 95vw;
    max-height: 95vh;
  }

  /* Range slider styling */
  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(to right, #9333ea, #7c3aed);
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  input[type="range"]::-moz-range-thumb {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(to right, #9333ea, #7c3aed);
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    border: none;
  }
</style>

<script>
  let uploadedImage: File | null = null;
  let outputUrl: string = "";

  // Load API key from localStorage
  const apiKeyInput = document.getElementById("apiKey") as HTMLInputElement;
  const savedApiKey = localStorage.getItem("falApiKey");
  if (savedApiKey) {
    apiKeyInput.value = savedApiKey;
  }

  // Save API key to localStorage on input
  apiKeyInput.addEventListener("input", () => {
    localStorage.setItem("falApiKey", apiKeyInput.value);
  });

  // Face enhancement toggle
  const faceEnhancementCheckbox = document.getElementById(
    "faceEnhancement",
  ) as HTMLInputElement;
  const faceStrengthContainer = document.getElementById(
    "faceStrengthContainer",
  )!;
  const faceStrengthSlider = document.getElementById(
    "faceStrength",
  ) as HTMLInputElement;
  const faceStrengthValue = document.getElementById("faceStrengthValue")!;

  faceEnhancementCheckbox.addEventListener("change", () => {
    faceStrengthContainer.style.display = faceEnhancementCheckbox.checked
      ? "block"
      : "none";
  });

  faceStrengthSlider.addEventListener("input", () => {
    faceStrengthValue.textContent = faceStrengthSlider.value;
  });

  // Handle file upload
  const imageUploadInput = document.getElementById(
    "imageUpload",
  ) as HTMLInputElement;
  const imagePreview = document.getElementById("imagePreview")!;
  const previewImg = document.getElementById("previewImg") as HTMLImageElement;
  const clearImageBtn = document.getElementById("clearImage")!;

  imageUploadInput.addEventListener("change", (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (files && files[0]) {
      uploadedImage = files[0];
      displayPreview(files[0]);
    }
  });

  const displayPreview = (file: File) => {
    const reader = new FileReader();
    reader.onload = (e) => {
      previewImg.src = e.target?.result as string;
      imagePreview.classList.remove("hidden");
    };
    reader.readAsDataURL(file);
  };

  clearImageBtn.addEventListener("click", () => {
    uploadedImage = null;
    previewImg.src = "";
    imagePreview.classList.add("hidden");
    imageUploadInput.value = "";
  });

  // Handle paste
  const pasteArea = document.getElementById("pasteArea")!;

  const handlePaste = async (event: ClipboardEvent) => {
    const items = event.clipboardData?.items;
    if (!items) return;

    for (let i = 0; i < items.length; i++) {
      const item = items[i];
      if (item.type.indexOf("image") !== -1) {
        event.preventDefault();
        const blob = item.getAsFile();
        if (blob) {
          uploadedImage = new File([blob], `pasted-image-${Date.now()}.png`, {
            type: blob.type,
          });
          displayPreview(uploadedImage);
          showStatus("Image pasted from clipboard!", "success");
        }
        break;
      }
    }
  };

  pasteArea.addEventListener("paste", handlePaste);
  document.addEventListener("paste", handlePaste);

  // Convert file to base64
  const fileToBase64 = (file: File): Promise<string> => {
    return new Promise((resolve, reject) => {
      const reader = new FileReader();
      reader.onload = () => resolve(reader.result as string);
      reader.onerror = reject;
      reader.readAsDataURL(file);
    });
  };

  // Show status message
  const showStatus = (message: string, type: "info" | "success" | "error") => {
    const statusElement = document.getElementById("status")!;
    statusElement.textContent = message;
    statusElement.className = `text-center mb-6 font-semibold drop-shadow-sm ${
      type === "error"
        ? "text-red-700"
        : type === "success"
          ? "text-green-700"
          : "text-purple-700"
    }`;
  };

  // Upscale image
  const upscaleBtn = document.getElementById("upscaleBtn") as HTMLButtonElement;

  upscaleBtn.addEventListener("click", async () => {
    const apiKey = apiKeyInput.value.trim();
    if (!apiKey) {
      showStatus("Please enter your Fal API key", "error");
      return;
    }

    if (!uploadedImage) {
      showStatus("Please upload an image to upscale", "error");
      return;
    }

    upscaleBtn.disabled = true;
    upscaleBtn.textContent = "Upscaling...";
    showStatus("Processing image...", "info");

    try {
      const imageBase64 = await fileToBase64(uploadedImage);

      const model = (document.getElementById("model") as HTMLSelectElement)
        .value;
      const upscaleFactor = parseInt(
        (document.getElementById("upscaleFactor") as HTMLSelectElement).value,
      );
      const outputFormat = (
        document.getElementById("outputFormat") as HTMLSelectElement
      ).value;
      const faceEnhancement = faceEnhancementCheckbox.checked;
      const faceStrength = parseFloat(faceStrengthSlider.value);

      const requestBody: any = {
        model: model,
        upscale_factor: upscaleFactor,
        image_url: imageBase64,
        output_format: outputFormat,
        subject_detection: "All",
        face_enhancement: faceEnhancement,
      };

      if (faceEnhancement) {
        requestBody.face_enhancement_strength = faceStrength;
      }

      const response = await fetch(
        "https://fal.run/fal-ai/topaz/upscale/image",
        {
          method: "POST",
          headers: {
            Authorization: `Key ${apiKey}`,
            "Content-Type": "application/json",
          },
          body: JSON.stringify(requestBody),
        },
      );

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({}));
        throw new Error(
          errorData.detail || `API request failed: ${response.status}`,
        );
      }

      const result = await response.json();
      outputUrl = result.image?.url || result.url;

      if (!outputUrl) {
        throw new Error("No output image URL in response");
      }

      // Display output
      const outputContainer = document.getElementById("outputContainer")!;
      const outputImage = document.getElementById(
        "outputImage",
      ) as HTMLImageElement;
      outputImage.src = outputUrl;
      outputContainer.classList.remove("hidden");

      showStatus("Image upscaled successfully!", "success");
    } catch (error) {
      console.error("Error upscaling image:", error);
      showStatus(
        `Error: ${error instanceof Error ? error.message : "Unknown error"}`,
        "error",
      );
    } finally {
      upscaleBtn.disabled = false;
      upscaleBtn.textContent = "Upscale Image";
    }
  });

  // Copy URL button
  const copyUrlBtn = document.getElementById("copyUrlBtn")!;
  copyUrlBtn.addEventListener("click", async () => {
    try {
      await navigator.clipboard.writeText(outputUrl);
      const originalText = copyUrlBtn.textContent;
      copyUrlBtn.textContent = "Copied!";
      setTimeout(() => {
        copyUrlBtn.textContent = originalText;
      }, 2000);
    } catch (error) {
      showStatus("Failed to copy URL", "error");
    }
  });

  // Download button
  const downloadBtn = document.getElementById("downloadBtn")!;
  downloadBtn.addEventListener("click", async () => {
    try {
      const response = await fetch(outputUrl);
      const blob = await response.blob();
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      const format = (
        document.getElementById("outputFormat") as HTMLSelectElement
      ).value;
      a.download = `upscaled-image.${format}`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    } catch (error) {
      showStatus("Failed to download image", "error");
    }
  });

  // Copy image button
  const copyImageBtn = document.getElementById("copyImageBtn")!;
  copyImageBtn.addEventListener("click", async () => {
    try {
      const response = await fetch(outputUrl);
      const blob = await response.blob();
      await navigator.clipboard.write([
        new ClipboardItem({ [blob.type]: blob }),
      ]);
      const originalText = copyImageBtn.textContent;
      copyImageBtn.textContent = "Copied!";
      setTimeout(() => {
        copyImageBtn.textContent = originalText;
      }, 2000);
    } catch (error) {
      showStatus("Failed to copy image. Try using Copy URL instead.", "error");
    }
  });

  // Fullscreen modal
  const outputImage = document.getElementById(
    "outputImage",
  ) as HTMLImageElement;
  const fullscreenModal = document.getElementById("fullscreenModal")!;
  const fullscreenImage = document.getElementById(
    "fullscreenImage",
  ) as HTMLImageElement;
  const closeFullscreen = document.getElementById("closeFullscreen")!;

  outputImage.addEventListener("click", () => {
    fullscreenImage.src = outputUrl;
    fullscreenModal.classList.remove("hidden");
    document.body.style.overflow = "hidden";
  });

  closeFullscreen.addEventListener("click", () => {
    fullscreenModal.classList.add("hidden");
    document.body.style.overflow = "";
  });

  fullscreenModal.addEventListener("click", (e) => {
    if (e.target === fullscreenModal) {
      fullscreenModal.classList.add("hidden");
      document.body.style.overflow = "";
    }
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !fullscreenModal.classList.contains("hidden")) {
      fullscreenModal.classList.add("hidden");
      document.body.style.overflow = "";
    }
  });
</script>
