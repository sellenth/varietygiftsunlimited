---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Chewbarka Bandana";
const description = "A stylish bandana for your furry friend featuring our exclusive Chewbarka design.";
const singlePrice = "12.99";
// You'll need to create this price ID in Stripe for the bandana at $12.99
const singlePriceId = "price_1QrEFuAp2D4XT14xXXXXXXXX"; // Replace with actual Stripe price ID

// Create an array of images for the carousel
const images = [
    { src: "/chewbarka/dog.webp", alt: `${title} view 1` },
    { src: "/chewbarka/item.webp", alt: `${title} view 2` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        singlePrice={singlePrice}
        singlePriceId={singlePriceId}
        images={images}
    />
</Layout> 