---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Husky Yoga T-Shirt";
const description = "Comfortable and stylish t-shirt featuring our unique Husky Yoga design. Available in sizes S through XL.";

// Price IDs from new_price_ids.txt for the Husky product
const priceIds = {
    S: "price_1QrEmXAp2D4XT14xcKKxggoV",
    M: "price_1QrEmYAp2D4XT14x3G31zroS",
    L: "price_1QrEmYAp2D4XT14xUGpDzNNI",
    XL: "price_1QrEmZAp2D4XT14xyHxcrbgE"
};

// Create an array of images for the carousel
const images = [
    { src: "/yoga/husky1.jpg", alt: `${title} view 1` },
    { src: "/yoga/husky2.jpg", alt: `${title} view 2` },
    { src: "/yoga/husky3.jpg", alt: `${title} view 3` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        priceIds={priceIds}
        images={images}
    />
</Layout> 