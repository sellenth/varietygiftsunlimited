---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Corgi Yoga T-Shirt";
const description = "Comfortable and stylish t-shirt featuring our adorable Corgi Yoga design. Available in sizes S through XL.";

// Price IDs from new_price_ids.txt for the Corgi product
const priceIds = {
    S: "price_1QrEmcAp2D4XT14x0F0HqWS7",
    M: "price_1QrEmdAp2D4XT14xxwoEnIpR",
    L: "price_1QrEmeAp2D4XT14xCcysmM0x",
    XL: "price_1QrEmeAp2D4XT14xaWTzR6UK"
};

// Create an array of images for the carousel
const images = [
    { src: "/yoga/corgi1.jpg", alt: `${title} view 1` },
    { src: "/yoga/corgi2.jpg", alt: `${title} view 2` },
    { src: "/yoga/corgi3.jpg", alt: `${title} view 3` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        priceIds={priceIds}
        images={images}
    />
</Layout> 