---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const blogPosts = await getCollection('blog');
const sortedBlogPosts = blogPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Environment-aware base URL
const isLocalhost = import.meta.env.DEV || Astro.url.hostname === "localhost";
const baseUrl = isLocalhost ? "" : "https://variety.gifts";
---

<Layout
  title="Blog - Variety Gifts Unlimited"
  hideHeader={false}
  hideFooter={false}
  description="Read our latest thoughts, insights, and updates from the Variety Gifts team."
>
  <main class="w-full overflow-x-hidden relative">
    <!-- Hero Section -->
    <section class="blog-hero pt-16 px-4 sm:px-8 md:px-12 lg:px-24 py-20 bg-white">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-indigo-900 mb-4">
          OUR BLOG
        </h1>
        <p class="text-indigo-800 text-lg md:text-xl max-w-2xl mx-auto">
          Thoughts, insights, and updates from the Variety Gifts team
        </p>
      </div>
    </section>

    <!-- Blog Posts Section -->
    <section class="blog-posts py-20 px-4 sm:px-8 md:px-12 lg:px-24 bg-lavender">
      <div class="max-w-6xl mx-auto">
        <div class="blog-grid">
          {sortedBlogPosts.map((post) => (
            <article class="blog-card hover-lift">
              <a href={`${baseUrl}/blog/${post.slug}`} class="blog-card-link">
                <div class="blog-card-content">
                  <div class="blog-meta">
                    <time class="blog-date">{new Date(post.data.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}</time>
                    <span class="blog-read-time">{post.data.readTime}</span>
                  </div>
                  <h2 class="blog-title">{post.data.title}</h2>
                  <p class="blog-excerpt">{post.data.excerpt}</p>
                  <div class="blog-tags">
                    {post.data.tags.map((tag) => (
                      <span class="blog-tag">{tag}</span>
                    ))}
                  </div>
                  <div class="read-more">
                    <span class="read-more-text">Read More â†’</span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Blog Hero */
  .blog-hero {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  }

  /* Background */
  .bg-lavender {
    background: #f8fafc;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Blog Cards */
  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }

  .blog-card:hover {
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.15);
    transform: translateY(-4px);
  }

  .blog-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .blog-card-content {
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Blog Meta */
  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: #6366f1;
  }

  .blog-date {
    font-weight: 500;
  }

  .blog-read-time {
    color: #8b5cf6;
    font-weight: 500;
  }

  /* Blog Title */
  .blog-title {
    font-size: 1.25rem;
    font-weight: bold;
    color: #3730a3;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-title {
    color: #6366f1;
  }

  /* Blog Excerpt */
  .blog-excerpt {
    color: #64748b;
    line-height: 1.6;
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  /* Blog Tags */
  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .blog-tag {
    background: rgba(99, 102, 241, 0.1);
    color: #6366f1;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Read More */
  .read-more {
    margin-top: auto;
  }

  .read-more-text {
    color: #6366f1;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }

  .blog-card:hover .read-more-text {
    color: #3730a3;
    transform: translateX(4px);
  }

  /* Hover Effects */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  /* Responsive Design */
  @media (max-width: 767px) {
    .blog-card-content {
      padding: 1.25rem;
    }

    .blog-title {
      font-size: 1.125rem;
    }
  }
</style>