---

<Layout title="Variety Gifts Unlimited - Links">
  <main class="bg-[#ddd0fc] min-h-screen py-8 px-4">
    <div class="container mx-auto max-w-2xl">
      <Hero img="" />
      
      <div class="space-y-4 mt-8">
        {links.map(link => (
          <a
            href={link.url}
            class="block backdrop-blur-sm bg-white/10 p-4 rounded-xl border border-white/20 shadow-lg hover:scale-[1.02] transition-transform duration-200"
          >
            <div class="flex items-center gap-4">
              {link.icon.length <= 2 ? (
                <span class="text-2xl">{link.icon}</span>
              ) : (
                <svg
                  viewBox="0 0 24 24"
                  class="w-8 h-8 fill-current"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d={link.icon} />
                </svg>
              )}
              <div>
                <h2 class="font-bold text-lg text-accent">{link.name}</h2>
                <p class="text-sm text-black/70">{link.description}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style>
  a:hover {
    transform: translateY(-2px);
