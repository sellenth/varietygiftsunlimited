</Layout>

<style>
  .link-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(99, 102, 241, 0.1);
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .link-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
  }

  .link-card:hover .gradient-overlay {
    opacity: 1;
  }

  .link-card-inner {
    position: relative;
    z-index: 2;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon-wrapper {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .link-card:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  .content {
    flex: 1;
  }

  .arrow {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .link-card:hover .arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .featured-card {
    border: 2px solid #6366f1;
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.2);
  }

  .featured-card::after {
    content: '‚ú® FEATURED';
    position: absolute;
    top: 12px;
    right: 12px;
    background: #6366f1;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
    z-index: 3;
  }

  .stat-card {
    background: white/70;
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.15);
  }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .link-card-inner {
      padding: 1rem;
    }
    
    .icon-wrapper {
      width: 50px;
      height: 50px;
    }
    
    .icon-wrapper span {
      font-size: 1.5rem;
    }
    
    .icon-wrapper svg {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>
