---

<Layout title="Variety Gifts Unlimited - Links" hideHeader={false}>
  <main class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 relative overflow-hidden">
    <Bubbles />
    
    <div class="relative z-10 container mx-auto max-w-4xl px-6 py-16">
      <!-- Header -->
      <div class="text-center mb-16">
        <div class="mb-8">
          <img 
            src="/logos/logo_cropped.svg" 
            alt="Variety Gifts Logo" 
            class="w-64 mx-auto animate-float"
          />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-indigo-900 mb-4">
          All Our Links ‚ú®
        </h1>
        <p class="text-lg text-indigo-700 max-w-2xl mx-auto">
          Your one-stop destination for gifts, games, and good vibes! 
          Click any link below to explore our world of surprises.
        </p>
      </div>

      <!-- Links Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        {links.map((link, index) => (
          <a
            href={link.url}
            class={`link-card group ${link.featured ? 'featured-card' : ''}`}
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="link-card-inner">
              <div class="icon-wrapper">
                {link.icon.length <= 2 ? (
                  <span class="text-4xl">{link.icon}</span>
                ) : (
                  <svg
                    viewBox="0 0 24 24"
                    class="w-10 h-10 fill-white"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d={link.icon} />
                  </svg>
                )}
              </div>
              <div class="content">
                <h2 class="text-xl font-bold text-indigo-900 mb-2 group-hover:text-white transition-colors">
                  {link.name}
                </h2>
                <p class="text-sm text-indigo-700 group-hover:text-white/90 transition-colors">
                  {link.description}
                </p>
              </div>
              <div class="arrow">
                <svg class="w-5 h-5 fill-indigo-400 group-hover:fill-white transition-colors" viewBox="0 0 24 24">
                  <path d="M8.59 16.59L13.17 12L8.59 7.41L10 6L16 12L10 18L8.59 16.59Z"/>
                </svg>
              </div>
            </div>
            <div class={`gradient-overlay bg-gradient-to-r ${link.color || 'from-indigo-400 to-purple-400'}`}></div>
          </a>
        ))}
      </div>

      <!-- Fun Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
        <div class="stat-card">
          <div class="text-2xl font-bold text-indigo-900">500+</div>
