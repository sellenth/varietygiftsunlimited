---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Golden Yoga T-Shirt";
const description = "Comfortable and stylish t-shirt featuring our unique Golden Yoga design. Available in sizes S through XL.";

// Price IDs from new_price_ids.txt for the Golden product
const priceIds = {
    S: "price_1QrEmXAp2D4XT14xcKKxggoV",
    M: "price_1QrEmYAp2D4XT14x3G31zroS",
    L: "price_1QrEmYAp2D4XT14xUGpDzNNI",
    XL: "price_1QrEmZAp2D4XT14xyHxcrbgE"
};
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        priceIds={priceIds}
        image="/yoga/golden.jpg"
    />
</Layout> 