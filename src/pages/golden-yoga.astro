---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Golden Retriever Yoga T-Shirt";
const description = "Comfortable and stylish t-shirt featuring our unique Golden Retriever Yoga design. Available in sizes S through XL.";

// Price IDs from new_price_ids.txt for the Golden product
const priceIds = {
    S: "price_1QrEmaAp2D4XT14xAJ5oQmCk",
    M: "price_1QrEmaAp2D4XT14xqdbf42Mj",
    L: "price_1QrEmbAp2D4XT14xyxILc0oe",
    XL: "price_1QrEmcAp2D4XT14x8lbl7XdA"
};

// Create an array of images for the carousel
const images = [
    { src: "/yoga/golden1.jpg", alt: `${title} view 1` },
    { src: "/yoga/golden2.jpg", alt: `${title} view 2` },
    { src: "/yoga/golden3.jpg", alt: `${title} view 3` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        priceIds={priceIds}
        images={images}
    />
</Layout> 