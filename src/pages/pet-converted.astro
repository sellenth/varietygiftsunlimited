---
import Layout from "../layouts/Layout.astro";
import '@fontsource/creepster';
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout
	title="Variety Gifts Unlimited - Unique and Fun Gifts"
	hideHeader={false}
>
	<main
		class="p-5 w-full h-full flex flex-col gap-4 items-center overflow-x-hidden text-white bg-black"
	>
		<div class="hero m-3 w-full sm:w-auto">
			<div class="hero-content text-neutral-content text-center">
				<div class="w-full flex flex-col gap-4 items-center">
					<h1
						class="mb-5 text-6xl sm:text-8xl bg-accent p-4 pb-8 rounded-xl text-left sm:text-center  spooky-font text-white"
					>
						Here's your spooky pet!
					</h1>
				</div>
			</div>
		</div>

		<div id="loading" class="flex flex-col items-center gap-4 w-full sm:w-1/3">
			<h1 class="text-4xl">Processing</h1>
			<span class="loading loading-dots loading-lg"></span>
			<p>Please wait while we process your image. This can take up to 1 minute.</p>
			<p id="retry-note" class="text-sm opacity-90"></p>
		</div>

		<div id="error" class="flex flex-col items-center gap-4 w-full sm:w-1/3 hidden">
			<h1 class="text-4xl">Error</h1>
			<p>There was an error processing your request. Please contact varietygiftsunlimited@gmail.com and I'll fix it ASAP.</p>
			<div class="flex gap-3">
				<button id="retry-btn" class="btn btn-secondary">Try Again</button>
				<a href="/pet-converter" class="btn btn-primary">Start Over</a>
			</div>
		</div>

		<div
			id="thumbnail-container"
			class="flex flex-col items-center gap-4 w-full sm:w-1/3 hidden"
		>
			<img
				id="thumbnail"
				src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs="
				class="w-full h-full object-cover border-2 border-accent rounded-full"
			/>
		</div>

		<div
			id="after-conversion"
			class="flex flex-col items-center gap-4 w-full sm:w-1/3 hidden"
		>
			<p>Make sure to save your image now or bookmark this page.</p>
			<p>
				Feel free to share your spooky pet with your friends and family
				and with us on social media! You can find our links at the
				bottom of this page.
			</p>
			<p>
				If you aren't satisfied with the result, please contact
				varietygiftsunlimited@gmail.com and I'll do my best to sort
				things out for you!
			</p>
			<p>
				If you have other questions or suggestions, please don't
				hesitate to reach out.
			</p>
			<p>Thanks so much for using our pet converter!</p>
		</div>

		<script>
			const thumbnail = document.getElementById(
				"thumbnail",
			) as HTMLImageElement;
			let attemptCount = 0; // Add global count
			const maxAttempts = 5;

			async function main() {
				const imageId = getUrlParameter("image_id");
				if (imageId) {
					async function getImg() {
						if (attemptCount >= maxAttempts) {
							// Check if max attempts reached
							document
								.getElementById("loading")
								?.classList.add("hidden");
							document
								.getElementById("error")
								?.classList.remove("hidden");
							return;
						}
						attemptCount++; // Increment attempt count
						document
							.getElementById("loading")
							?.classList.remove("hidden");
						document
							.getElementById("thumbnail-container")
							?.classList.add("hidden");
						const retryNote = document.getElementById('retry-note') as HTMLParagraphElement | null;
						if (retryNote) retryNote.textContent = attemptCount > 1 ? `Still processing… retrying (${attemptCount} of ${maxAttempts})` : '';
						let formData = new FormData();
						formData.append("filename", imageId);
						try {
							var filenameResponse = await fetch(
								`/api/pet-converter`,
								{
									method: "POST",
									body: formData,
								},
							);
							document
								.getElementById("loading")
								?.classList.add("hidden");
							document
								.getElementById("thumbnail-container")
								?.classList.remove("hidden");
							if (filenameResponse.ok) {
								document
									.getElementById("after-conversion")
									?.classList.remove("hidden");
								var filename = await filenameResponse
									.text()
									.then((text) => text.replace(/^"|"$/g, ""));
								console.log(filename);
								thumbnail.src = filename;
							} else if (filenameResponse.status >= 500) {
								// Server signaled an error; show error UI immediately
								document.getElementById("loading")?.classList.add("hidden");
								document.getElementById("error")?.classList.remove("hidden");
							} else {
								console.error("Still processing… will retry");
								setTimeout(getImg, 1200);
							}
						} catch (error) {
							console.error("Error fetching pet image:", error);
							const retryNote = document.getElementById('retry-note') as HTMLParagraphElement | null;
							if (retryNote) retryNote.textContent = `Still processing… retrying (${attemptCount} of ${maxAttempts})`;
							setTimeout(getImg, 1200);
						}
					}
					getImg();
				}
			}

			// Function to get URL parameters
			function getUrlParameter(name: string) {
				name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
				var regex = new RegExp("[\\?&]" + name + "=([^&#]*)");
				var results = regex.exec(location.search);
				return results === null
					? ""
					: decodeURIComponent(results[1].replace(/\+/g, " "));
			}
			main();

			// Retry button handler
			const retryBtn = document.getElementById('retry-btn') as HTMLButtonElement | null;
			if (retryBtn) {
				retryBtn.addEventListener('click', () => {
					attemptCount = 0;
					document.getElementById("error")?.classList.add("hidden");
					document.getElementById("loading")?.classList.remove("hidden");
					const retryNote = document.getElementById('retry-note') as HTMLParagraphElement | null;
					if (retryNote) retryNote.textContent = '';
					setTimeout(() => {
						main();
					}, 100);
				});
			}
		</script>
	</main>
</Layout>

<style>
	.spooky-font {
		font-family: "Creepster", cursive;
		letter-spacing: 0.02em;
	}
</style>
