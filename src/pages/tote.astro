---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Eco-Friendly Tote Bag";
const description = "A versatile and stylish tote bag perfect for everyday use. Made from durable, eco-friendly materials.";
const singlePrice = "15.99";
// You'll need to create this price ID in Stripe for the tote at $15.99
const singlePriceId = "price_1QrEG2Ap2D4XT14xdjVEYn3o"; // Replace with actual Stripe price ID

// Create an array of images for the carousel
const images = [
    { src: "/yoga/tote1.jpg", alt: `${title} view 1` },
    { src: "/yoga/tote2.jpg", alt: `${title} view 2` },
    { src: "/yoga/tote3.jpg", alt: `${title} view 3` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        singlePrice={singlePrice}
        singlePriceId={singlePriceId}
        images={images}
    />
</Layout> 