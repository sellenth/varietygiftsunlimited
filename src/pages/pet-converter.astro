---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
const PUBLIC_STRIPE_KEY = import.meta.env.PUBLIC_STRIPE_KEY
const PUBLIC_PET_1 = import.meta.env.PUBLIC_PET_1
const PUBLIC_PET_5 = import.meta.env.PUBLIC_PET_5
---

<Layout title="Variety Gifts Unlimited - Unique and Fun Gifts">
	<main class="p-5 w-full h-full flex flex-col gap-4 items-center overflow-x-hidden">
			<div class="hero m-3 w-full sm:w-auto">
				<div class="hero-content text-neutral-content text-center">
					<div class="w-full flex flex-col gap-4 items-center">
						<h1 class="mb-5 text-6xl sm:text-8xl bg-accent p-4 pb-8 rounded-xl text-left sm:text-center font-bold text-white">Pet Converter</h1>
					</div>
				</div>
			</div>
	<div class="flex flex-col items-center gap-4">
		<button class="btn btn-primary" onclick="document.getElementById('petImage').click()">Choose Pet Image</button>
		<input type="file" id="petImage" accept="image/*" hidden />
	</div>

	<div class="flex flex-col items-center gap-4 w-full sm:w-1/3 ">
		<img id="thumbnail" src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" class="w-full h-full object-cover border-2 border-accent rounded-full" />
	</div>

	<!-- New gender selection buttons -->
	<div class="flex flex-col items-center gap-4 hidden">
		<label class="text-lg font-semibold">My pet is a:</label>
		<div class="btn-group">
			<button class="btn btn-outline" data-gender="male">Guy</button>
			<button class="btn btn-outline" data-gender="female">Gal</button>
			<button class="btn btn-outline" data-gender="unknown">Not sure</button>
		</div>
	</div>

	<button id="buy-button" class="btn btn-primary" data-stripe-key={PUBLIC_STRIPE_KEY} data-pet1={PUBLIC_PET_1} data-pet5={PUBLIC_PET_5}>Fetch</button>
	<script>
        import { loadStripe } from '@stripe/stripe-js';
        const checkoutDiv = document.getElementById('buy-button');
		if (!checkoutDiv || !checkoutDiv.dataset || !checkoutDiv.dataset.stripeKey || !checkoutDiv.dataset.pet1) {
			console.error('You managed to break my site. Please contact the Tanner.');
			throw new Error('You managed to break my site. Please contact the Tanner.');
		}
		const pet1 = checkoutDiv.dataset.pet1;
        const stripe = await loadStripe(checkoutDiv.dataset.stripeKey);
		if (!stripe) {
			console.error('Stripe failed to load');
			throw new Error('Stripe failed to load');
		}
		const petImage = document.getElementById('petImage') as HTMLInputElement;
		const thumbnail = document.getElementById('thumbnail') as HTMLImageElement;
		if (petImage) {
			petImage.addEventListener('change', (e) => {
				if (!petImage.files || petImage.files.length === 0) {
					throw new Error('No file selected');
				}
				const file = petImage.files[0];
				const reader = new FileReader();
				reader.onload = (event) => {
					if (!event.target || !event.target.result) {
						throw new Error('No file selected');
					}
					thumbnail.src = event.target.result as string;
				};
				reader.readAsDataURL(file);
			});
		}

		const genderButtons = document.querySelectorAll('[data-gender]') as NodeListOf<HTMLButtonElement>;
		let selectedGender = 'unknown';

		genderButtons.forEach(button => {
			button.addEventListener('click', () => {
				genderButtons.forEach(btn => btn.classList.remove('btn-active'));
				button.classList.add('btn-active');
				selectedGender = button.dataset.gender as string;
			});
		});

		const buyButton = document.getElementById('buy-button') as HTMLButtonElement;
		if (!buyButton) {
			console.error('Buy button not found');
			throw new Error('Buy button not found');
		}
		buyButton.addEventListener('click', async () => {
			if (!petImage.files || petImage.files.length === 0) {
				alert('Please select an image first.');
				throw new Error('Please select an image first.');
			}
			const thumbnailFile = petImage.files[0];
			
			// Create FormData and append the thumbnail file
			const formData = new FormData();
			formData.append('image', thumbnailFile);
			formData.append('gender', selectedGender);

			// Upload thumbnail image to API endpoint
			const response = await fetch('https://api.varietygiftsunlimited.com/upload-img', {
				method: 'POST',
				body: formData
			});

			if (response.ok) {
				const responseText = await response.text();
				console.log('API Response:', responseText);
				// Redirect to Stripe checkout after successful upload
				stripe.redirectToCheckout({
					lineItems: [{
						price: pet1,
						quantity: 1
					}],
					mode: 'payment',
					successUrl: `${window.location.origin}/pet-converter?success=true&session_id={CHECKOUT_SESSION_ID}&image_id=${responseText}&gender=${selectedGender}`,
					cancelUrl: `${window.location.origin}/pet-converter?error=true`,
				}).then(function (result) {
					if (result.error) {
						alert(result.error.message);
					}
				});
			} else {
				alert('Failed to upload thumbnail image. Please try again.');
			}
		});
    
    // Function to get URL parameters
    function getUrlParameter(name: string) {
        name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
        var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
        var results = regex.exec(location.search);
        return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    }

    const imageId = getUrlParameter('image_id');
    if (imageId) {
        let formData = new FormData();
        formData.append('gender', getUrlParameter('gender'));
        formData.append('filename', imageId);
        var filenameResponse = await fetch(`https://api.varietygiftsunlimited.com/pet-converter`, {
            method: 'POST',
            body: formData
        });
        var filename = await filenameResponse.text().then(text => text.replace(/^"|"$/g, ''));
        console.log(filename)
        thumbnail.src = "https://api.varietygiftsunlimited.com/" + filename
    }
	</script>
	</main>
	<Footer />
</Layout>

