---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Carousel from '../components/Carousel.astro';
import Header from '../components/Header.astro';
import Circle from '../components/Circle.astro';
---

<Layout title="Variety Gifts Unlimited - Unique and Fun Gifts"
>
	<main class="p-5 w-full flex flex-col gap-4 items-center overflow-x-hidden relative">
		<Hero img="" />

		<div class="max-w-3xl w-full grid grid-cols-2 gap-4 relative z-10">
			<a href="/game-browser" class="w-full h-32 md:h-64 relative">
				<button class="btn btn-secondary w-full h-32 md:h-64 flex flex-col items-center justify-end p-0 overflow-hidden">
					<div class="h-[80%] w-full flex items-center justify-center">
						<img src="/game/preview.png" alt="Games" class="object-cover h-full w-full" />
					</div>
					<div class="h-[20%] w-full flex items-center justify-center bg-inherit">
						<span class="text-3xl">Games</span>
					</div>
					<span class="absolute -top-2 -left-2 bg-accent text-white text-xs px-2 py-1 rounded-full font-bold animate-pulse">NEW</span>
				</button>
			</a>
			<a href="/shop" class="w-full h-32 md:h-64">
				<button class="btn btn-accent w-full h-32 md:h-64 flex flex-col items-center justify-end p-0 overflow-hidden">
					<div class="h-[80%] w-full flex items-center justify-center">
						<img src="/presents.jpg" alt="Gift Shop" class="object-cover h-full w-full" />
					</div>
					<div class="h-[20%] w-full flex items-center justify-center bg-inherit">
						<span class="text-3xl">Gift Shop</span>
					</div>
				</button>
			</a>
			<a href="/pet-converter" class="w-full h-32 md:h-64">
				<button class="btn btn-primary w-full h-32 md:h-64 flex flex-col items-center justify-end p-0 overflow-hidden">
					<div class="h-[80%] w-full flex items-center justify-center">
						<img src="/spook/jag_spook.png" alt="Pet Converter" class="object-cover h-full w-full" />
					</div>
					<div class="h-[20%] w-full flex items-center justify-center bg-inherit">
						<span class="text-3xl">Pet Converter</span>
					</div>
				</button>
			</a>
			<a href="/intro" class="w-full h-32 md:h-64">
				<button class="btn btn-primary w-full h-32 md:h-64 flex flex-col items-center justify-end p-0 overflow-hidden">
					<div class="h-[80%] w-full flex items-center justify-center">
						<img src="/microphone.png" alt="Intro Maker" class="object-cover h-full w-full" />
					</div>
					<div class="h-[20%] w-full flex items-center justify-center bg-inherit">
						<span class="text-3xl">Intro Maker</span>
					</div>
				</button>
			</a>
		</div>
		<script async src="https://api.lindy.ai/api/lindyEmbed/lindyEmbed.js?a=ebd4b389-96ef-4acf-90b3-36eaadb961d1" crossorigin="use-credentials"></script>
	</main>
</Layout>

<style>
	.btn {
		position: relative;
	}
	.btn img {
		transition: transform 0.3s ease;
	}
	.btn:hover img {
		transform: scale(1.1);
	}
</style>
