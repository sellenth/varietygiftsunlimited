---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Carousel from '../components/Carousel.astro';
import Circle from '../components/Circle.astro';
---

<Layout title="Variety Gifts Unlimited - Unique and Fun Gifts"
>
	<main class="p-5 w-full flex flex-col gap-4 items-center overflow-x-hidden">
		<input type="checkbox" value="halloween" class="absolute top-0 right-0 m-5 toggle theme-controller" />

		<Hero img="" 
		title="Variety Gifts Unlimited" 
		body="Wishes YOU a spooooky october" />


		<div class="fixed-buttons opacity-80">
		<button class="btn btn-primary" onclick="alert('You are already looking at all the products...')">All Products</button>
		<a href="/game/savingsbox.html">
			<button class="btn btn-secondary">Games</button>
		</a>
		<a href="/pet-converter">
			<button class="btn btn-accent">Pet Converter</button>
		</a>
		</div>

		<section id="cards" class="grid grid-cols-1 lg:grid-cols-3 justify-items-center gap-4">
			<Card img="/tanner/tannerlogo.png" 
			title="Tanner Sticker" 
			body="woah!!" 
			sticker="true"
			href="tanner-sticker"></Card>

			<Card img="/box.webp" 
			title="Savings Box" 
			body="woah!!" 
			href="savings-box"></Card>

			<Card img="/snorlax.webp" 
			title="Snorlax Plushie" 
			body="woah!!" 
			href="snorlax"></Card>

			<Card img="/dog1.webp" 
			title="Dog Plushie" 
			body="woah!!" 
			href="dog"></Card>

			<Card img="/shaving/2.webp" 
			title="Shaving Cape" 
			body="woah!!" 
			href="shaving"></Card>

			<Card img="/bags/2.webp" 
			title="Crochet Bag" 
			body="woah!!" 
			href="crochet-bag"></Card>
		</section>
	</section>

	</main>
	<Footer />
</Layout>

