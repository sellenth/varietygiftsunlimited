---
import Layout from "../layouts/Layout.astro";
import Bubbles from "../components/Bubbles.astro";
---

<Layout
  title="Variety Gifts Unlimited - Unique and Fun Gifts"
  hideHeader={false}
>
  <main class="w-full overflow-x-hidden relative">
    <!-- Hero Section -->
    <section class="hero-section relative py-16 px-8 md:px-12 lg:px-24 flex flex-col items-center justify-center text-center">
      <!-- Animated Bubbles -->
      <Bubbles />
      
      <!-- Content (above bubbles) -->
      <div class="relative z-10">
        <h1 class="text-4xl md:text-5xl font-bold text-indigo-900 mb-2">DISCOVER JOYFUL SURPRISES</h1>
        <p class="text-indigo-800 max-w-2xl mb-8">Bringing happiness through every gift, we are your destination for playful surprises and joyous moments.</p>
        
        <div class="variety-gifts-logo mb-8">
          <img src="/logos/logo_cropped.svg" alt="Variety Gifts" class="w-full max-w-md mx-auto scale-125">
        </div>
        
        <div class="flex gap-4 justify-center">
          <a href="/shop" class="shop-now-btn">SHOP NOW</a>
          <a href="/about" class="learn-more-btn">LEARN MORE</a>
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    <section class="featured-products py-16 px-8 md:px-12 lg:px-24 bg-white">
      <h2 class="text-3xl md:text-4xl font-bold text-indigo-900 text-center mb-12">FEATURED PRODUCTS</h2>
      
      <div class="product-grid max-w-6xl mx-auto">
        <div class="product-card">
          <img src="/yoga/tote4.webp" alt="Love Earth Tote Bag" class="product-image">
          <h3 class="product-title">LOVE EARTH TOTE BAG</h3>
          <p class="product-price">$15.99</p>
        </div>
        
        <div class="product-card">
          <img src="/chewbarka/dog.webp" alt="Chewbarka Bandana" class="product-image">
          <h3 class="product-title">CHEWBARKA BANDANA</h3>
          <p class="product-price">$25.99</p>
        </div>
        
        <div class="product-card">
          <img src="/yoga/husky1.jpg" alt="Husky Yoga Tee" class="product-image">
          <h3 class="product-title">HUSKY YOGA TEE</h3>
          <p class="product-price">$29.99</p>
        </div>
      </div>
      
      <div class="text-center mt-8">
        <a href="/shop" class="shop-all-btn">SHOP ALL</a>
      </div>
    </section>

    <!-- About Us Section -->
    <section class="about-us py-16 px-8 md:px-12 lg:px-24 bg-lavender relative overflow-hidden">
      <!-- Animated Bubbles -->
      <Bubbles />
      
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-8 relative z-10">
        <div class="md:w-1/2">
          <img src="/logos/bg-min.png" alt="Variety Gifts" class="w-full max-w-md mx-auto">
        </div>
        <div class="md:w-1/2 text-center md:text-right">
          <h2 class="text-4xl font-bold text-indigo-900 mb-6">ABOUT US</h2>
          <p class="text-indigo-800 mb-6">
            Hey there! We're Halston and Matchima. We created Variety Gifts with one goal in mind: 
            bringing a bit more joy into everyday life through fun products and digital 
            experiences. No fancy mission statements here - we just want to create things 
            that make you happy. If you like what we're doing, that's a win in our book.
          </p>
          <a href="/about" class="learn-more-btn">LEARN MORE</a>
        </div>
      </div>
    </section>

    <!-- Free Games Section -->
    <section class="free-games py-16 px-8 md:px-12 lg:px-24">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row-reverse items-center gap-8">
        <div class="md:w-1/2">
          <img src="/game/shootout.png" alt="Free Games" class="games-image">
        </div>
        <div class="md:w-1/2 text-center md:text-left">
          <h2 class="text-4xl font-bold text-purple-500 mb-6">FREE GAMES</h2>
          <p class="text-indigo-800 mb-6">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor 
            incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud 
            exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in 
            reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
          </p>
          <a href="/game-browser" class="learn-more-btn">LEARN MORE</a>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-form py-16 px-8 md:px-12 lg:px-24 bg-lavender relative overflow-hidden">
      
      <div class="max-w-6xl mx-auto relative z-10">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <div class="md:w-2/3">
            <form id="contactForm" class="contact-form-container">
              <div class="grid grid-cols-2 gap-4 mb-4">
                <input type="text" placeholder="FIRST NAME" class="form-input" required>
                <input type="text" placeholder="LAST NAME" class="form-input" required>
              </div>
              <input type="email" placeholder="EMAIL" class="form-input mb-4" required>
              <input type="text" placeholder="SUBJECT" class="form-input mb-4" required>
              <textarea placeholder="HOW CAN WE HELP?" class="form-textarea mb-4" required></textarea>
              <button type="submit" class="send-btn">SEND</button>
            </form>
          </div>
          
          <div class="md:w-1/3 flex flex-col items-center md:items-start">
            <h2 class="text-4xl font-bold text-white mb-8 text-center md:text-left">GET IN TOUCH</h2>
            
