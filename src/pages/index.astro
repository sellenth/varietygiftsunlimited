---
import Layout from "../layouts/Layout.astro";
import GameButton from "../components/GameButton.astro";
---

<Layout
  title="Variety Gifts Unlimited - Unique and Fun Gifts"
  hideHeader={true}
>
  <main
    class="pb-32 w-full flex flex-col gap-4 items-center overflow-x-hidden relative"
  >
    <div class="h-screen w-full relative p-0 flex items-center justify-center">
      <img
        src="/logos/bg-min.png"
        alt="Variety Gifts Unlimited"
        class="h-full object-cover absolute inset-0 fade-in"
      />
      <img
        src="/logos/logo.png"
        alt="Variety Gifts Unlimited"
        class="absolute z-10 bounce-in w-64 md:w-[48rem]"
      />
    </div>

    <div class="px-5">
      <div class="mt-8">
        <h1 class="text-6xl font-bold">Welcome!</h1>
        <p class="mt-4 text-md md:text-lg max-w-3xl">
          Discover a world of gifts and fun here at Variety Gifts Unlimited.
          Whether you're looking for the latest games or delightful presents,
          we've got something special just for you!
        </p>
      </div>

      <div class="max-w-3xl w-full grid grid-cols-2 gap-4 relative z-10 mt-8">
        <GameButton
          href="/shop"
          title="Gift Shop"
          imageUrl="/etc/presents.png"
          imageClass=""
        />
        <GameButton
          href="/game-browser"
          title="Games"
          imageUrl="/game/shootout.png"
          imageClass=""
          isNew={true}
        />
      </div>
    </div>
    <!--<script async src="https://api.lindy.ai/api/lindyEmbed/lindyEmbed.js?a=ebd4b389-96ef-4acf-90b3-36eaadb961d1" crossorigin="use-credentials"></script>-->
  </main>
</Layout>

<style>
  .btn {
    position: relative;
  }

  .fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-in forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .bounce-in {
    animation: bounceIn 1s cubic-bezier(0.36, 0, 0.66, -0.56) forwards;
    transform: scale(0);
  }

  @keyframes bounceIn {
    0% {
      transform: scale(0);
    }
    50% {
      transform: scale(1.2);
    }
    75% {
      transform: scale(0.9);
    }
    100% {
      transform: scale(1);
    }
  }
</style>
