---
import Layout from '../layouts/Layout.astro';
import IntroForm from '../components/IntroForm.astro';
import SocialLinks from '../components/SocialLinks.astro';
import Hero from '../components/Hero.astro';
---

<Layout title="WWE Intro Generator">
  <main class="bg-[#ddd0fc] min-h-screen text-white py-8 px-4">
    <div class="container mx-auto max-w-2xl">
      <Hero img="" />
      <h1 class="text-4xl font-bold text-center mb-8 text-accent backdrop-blur-sm bg-white/10 p-6 rounded-xl border border-white/20 shadow-lg">
        CREATE YOUR <span class="underline decoration-2 underline-offset-4">VERY OWN</span> FIGHT NIGHT INTRO
      </h1>
      <IntroForm />
      <div class="my-8">
        <p class="text-lg text-center text-gray-800 mb-4 font-semibold">Preview: Jonathan the Racing Warrior's Intro</p>
        <video 
          class="w-full max-h-[320px] rounded-lg shadow-lg" 
          controls 
          preload="none"
        >
          <source src="/jonathan_intro.mp4" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
      <SocialLinks />
    </div>
  </main>
</Layout>

<style>
  .text-gradient {
    background: linear-gradient(to right, #ff6b6b, #4ecdc4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>