---
import Layout from '../layouts/Layout.astro';
import ProductDetail from '../components/ProductDetail.astro';

const title = "Great Dane Yoga T-Shirt";
const description = "Comfortable and stylish t-shirt featuring our unique Great Dane Yoga design. Available in sizes S through XL.";

// Price IDs from new_price_ids.txt for the Great Dane product
const priceIds = {
    S: "price_1QrEmhAp2D4XT14x3pNS8UoQ",
    M: "price_1QrEmhAp2D4XT14x8H8EhERo",
    L: "price_1QrEmiAp2D4XT14x49o9yMdo",
    XL: "price_1QrEmjAp2D4XT14xVWEHyfy5"
};

// Create an array of images for the carousel
const images = [
    { src: "/yoga/dane1.jpg", alt: `${title} view 1` },
    { src: "/yoga/dane2.jpg", alt: `${title} view 2` },
    { src: "/yoga/dane3.jpg", alt: `${title} view 3` }
];
---

<Layout title={title} hideHeader={false}>
    <ProductDetail 
        title={title}
        description={description}
        priceIds={priceIds}
        images={images}
    />
</Layout> 