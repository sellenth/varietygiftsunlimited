---
interface Props {
	img: string;
	sticker?: string;
	title: string;
	body: string;
	href: string;
	price?: string;
}

const { img, href, title, body, sticker, price } = Astro.props;
---

<a href={href} class="block group">
    <div class="bg-white relative overflow-hidden rounded-lg shadow-md transition-all duration-300 group-hover:shadow-xl">
        <div class="aspect-square relative">
            <img
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                src={img}
                alt={title}
                loading="lazy"
            />
        </div>
        <div class="absolute bottom-0 left-0 right-0 bg-white/90 py-3">
            <h3 class="text-xl font-bold text-black text-center">{title}</h3>
            {price && <p class="text-lg font-semibold text-center text-gray-800 mt-1">{price}</p>}
        </div>
    </div>
</a>

<style>
  @keyframes vertical-scroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }

  .vertical-scroll-wrapper {
    animation: vertical-scroll 10s linear infinite;
  }
</style>