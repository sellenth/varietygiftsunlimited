---
interface Props {
	img: string;
	sticker?: string;
	title: string;
	body: string;
	href: string;
}

const { img, href, title, body, sticker } = Astro.props;
---

<div class="group hover:scale-105 transition-all duration-300 w-full">
  <a href={href}>
    <div class="card bg-white/90 backdrop-blur-sm rounded-[2rem] shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border-4 border-primary/20">
      <figure class="w-full p-6 flex justify-center items-center">
        <img
          class="rounded-2xl w-5/6 object-cover transition-transform duration-300 group-hover:scale-105 {sticker ? 'translate-x-20' : ''}"
          src={img}
          alt={title} />
        {sticker &&
        <img
          class="rounded-2xl w-5/6 absolute transform -rotate-12 transition-transform duration-300 group-hover:rotate-[-16deg]"
          src={img}
          alt={title} />
        }
      </figure>
      <div class="card-body justify-end relative z-30 text-center pb-8">
        <h2 class="card-title text-accent text-2xl lg:text-3xl mb-4 justify-center font-bold">{title}</h2>
        <div class="justify-center items-center flex">
        <button class="btn btn-primary h-fit w-full sm:w-fit px-8 py-3 rounded-full transform transition-transform duration-300 group-hover:scale-110">See Details</button>
        </div>
      </div>
    </div>
  </a>
</div>