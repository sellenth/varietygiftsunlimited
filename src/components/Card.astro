---
interface Props {
	img: string;
	sticker?: string;
	title: string;
	body: string;
	href: string;
}

const { img, href, title, body, sticker } = Astro.props;
---

<div class="hover:scale-105 transition-all duration-300 w-full h-full">
  <a href={href} class="block h-full">
    <div class="bg-white/90 backdrop-blur-sm rounded-[2rem] shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border-4 border-primary/20 h-full flex flex-col">
      <figure class="w-full p-6 flex justify-center items-center flex-1">
        <div class="scroll-container relative w-5/6 h-48 overflow-hidden">
          <div class="vertical-scroll-wrapper">
            <img class="rounded-2xl w-full h-96 object-cover" src={img} alt={title} />
            <img class="rounded-2xl w-full h-96 object-cover" src={img} alt={title} />
          </div>
        </div>
      </figure>
      <div class="justify-end relative z-30 text-center pb-8">
        <h2 class="title text-accent text-2xl lg:text-3xl mb-4 justify-center font-bold">{title}</h2>
        <div class="justify-center items-center flex">
          <button class="btn btn-primary h-fit sm:w-fit px-8 py-3 rounded-full transform transition-transform duration-300 group-hover:scale-110">See Details</button>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
  @keyframes vertical-scroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }

  .vertical-scroll-wrapper {
    animation: vertical-scroll 10s linear infinite;
  }
</style>