---
interface Props {
	imgBefore: string;
	imgAfter: string;
	name: string;
}

const { imgBefore, imgAfter, name } = Astro.props;
---

<div class="flex flex-col items-center mb-8 bg-primary p-4">
	<h1 class="text-4xl font-bold mb-4 text-primary-content">{name}</h1>
	<div class="flex gap-4 max-w-[600px] w-full">
		<div class="w-1/2 overflow-hidden">
			<img 
				src={imgBefore} 
				alt={`${name} before`} 
				class="h-full aspect-[9/16] object-cover rounded-xl max-h-40"
			/>
		</div>
		<div class="w-1/2 overflow-hidden">
			<img 
				src={imgAfter} 
				alt={`${name} after`} 
				class="aspect-[9/16] object-cover rounded-xl max-h-40"
			/>
		</div>
	</div>
</div>
