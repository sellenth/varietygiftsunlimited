---
interface Props {
	imgBefore: string;
	imgAfter: string;
	name: string;
}

const { imgBefore, imgAfter, name } = Astro.props;
---

<div class="flex flex-col items-center mb-8 bg-neutral p-4 rounded-xl">
	<h1 class="text-4xl font-bold mb-4">{name}</h1>
	<div class="flex gap-4 max-w-[600px] w-full">
		<div class="w-1/2 aspect-[9/16] overflow-hidden">
			<img 
				src={imgBefore} 
				alt={`${name} before`} 
				class="w-full h-full object-cover rounded-xl"
			/>
		</div>
		<div class="w-1/2">
			<img 
				src={imgAfter} 
				alt={`${name} after`} 
				class="w-full h-auto rounded-xl"
			/>
		</div>
	</div>
</div>
