---
interface Props {
	imgBefore: string;
	imgAfter: string;
	name: string;
}

const { imgBefore, imgAfter, name } = Astro.props;
---

<div class="flex flex-col items-center mb-8 p-4">
	<h1 class="text-4xl font-bold mb-4 text-primary-content">{name}</h1>
	<div class="flex gap-4 max-w-[600px]">
		<div class="">
			<img 
				src={imgBefore} 
				alt={`${name} before`} 
				class="w-full object-cover rounded-xl h-48"
			/>
		</div>
		<div class="">
			<img 
				src={imgAfter} 
				alt={`${name} after`} 
				class="w-full rounded-xl h-48"
			/>
		</div>
	</div>
</div>
