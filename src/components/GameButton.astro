---
import { Image, Picture } from 'astro:assets';

interface Props {
    href: string;
    title: string;
    imageUrl: string;
    isNew?: boolean;
    imageClass?: string;
    imageStyle?: string;
}

const { href, title, imageUrl, isNew = false, imageClass = "", imageStyle = "" } = Astro.props;
---

<a href={href} class="w-full h-64 relative group">
    <div class="w-full h-64 flex flex-col items-center p-0 overflow-hidden backdrop-blur-md bg-purple-500/30 rounded-2xl transition-all duration-300 ease-in-out transform group-hover:scale-[1.02] group-hover:shadow-lg">
        <div class="flex flex-col items-center justify-center min-h-[20%]">
        <h3 class="text-2xl font-bold text-white">{title}</h3>
        </div>
        <!--<Picture src={imageUrl} alt={title} class="min-h-[80%] min-w-full h-full" width="400" height="400"/> -->
        <Image src={imageUrl} alt={title} class=`min-h-[80%] min-w-full object-cover h-full` width="300" height="300" position="top"/>
        {isNew && <span class="absolute top-2 left-2 bg-accent text-white text-xs px-2 py-1 rounded-full font-bold animate-pulse z-10">NEW</span>}
    </div>
</a>
