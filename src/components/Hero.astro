---
interface Props {
	body: string;
	img: string;
}

const { img, body } = Astro.props;
---

<div class="hero w-100 max-w-3xl relative z-0">
  <div class=""></div>
  <div class="hero-content text-neutral-content text-center">
    <div class="w-full flex flex-col gap-4 items-center">
      <div class="rounded-xl text-center parallax-container">
        <img src="/logo_cropped.svg" alt="Variety Gifts Unlimited" class="w-full max-w-[500px] h-auto parallax-logo" />
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logo = document.querySelector('.parallax-logo');
    let initialTop = logo.getBoundingClientRect().top;
    
    window.addEventListener('scroll', () => {
      const scrolled = window.scrollY;
      const parallaxValue = scrolled * 0.5; 
      logo.style.transform = `translateY(${parallaxValue}px)`;
    });
  });
</script>

<style>
  .parallax-container {
    position: relative;
    overflow: visible;
  }

  .parallax-logo {
    position: relative;
    will-change: transform;
    z-index: 20;
  }

  .curved-text {
    position: relative;
    display: inline-block;
    transform: perspective(500px) rotateX(30deg);
  }

  .curved-text::before,
  .curved-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 20%;
    background: inherit;
    z-index: -1;
  }

  .curved-text::before {
    left: 0;
    transform: skew(45deg);
  }

  .curved-text::after {
    right: 0;
    transform: skew(-45deg);
  }
</style>