---
interface Props {
	body: string;
	img: string;
}

const { img, body } = Astro.props;
---

<div class="hero w-100 max-w-3xl">
  <div class=""></div>
  <div class="hero-content text-neutral-content text-center ">
    <div class="w-full flex flex-col gap-4 items-center">
      <div class="mb-5 p-4 pb-8 rounded-xl text-center">
        <img src="/nobglogo.svg" alt="Variety Gifts Unlimited" class="w-full max-w-[500px] h-auto" />
      </div>
    </div>
  </div>
</div>


<style>
  .curved-text {
    position: relative;
    display: inline-block;
    transform: perspective(500px) rotateX(30deg);
  }

  .curved-text::before,
  .curved-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 20%;
    background: inherit;
    z-index: -1;
  }

  .curved-text::before {
    left: 0;
    transform: skew(45deg);
  }

  .curved-text::after {
    right: 0;
    transform: skew(-45deg);
  }
</style>