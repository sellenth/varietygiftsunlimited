---
interface Props {
	title: string;
	body: string;
	img: string;
}

const { img, title, body } = Astro.props;
---

<div class="hero m-3 w-full sm:w-auto">
  <div class=""></div>
  <div class="hero-content text-neutral-content text-center">
    <div class="w-full flex flex-col gap-4 items-center curved-text bg-[#414558] ">
      <h1 class="mb-5 text-6xl sm:text-8xl p-4 pb-8 rounded-xl text-center font-bold text-white">{title}</h1>
      <h3 class="text-lg text-white mb-4 mt-[-32px]">{body}</h3>
    </div>
  </div>
</div>


<style>
  .curved-text {
    position: relative;
    display: inline-block;
    transform: perspective(500px) rotateX(30deg);
  }

  .curved-text::before,
  .curved-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 20%;
    background: inherit;
    z-index: -1;
  }

  .curved-text::before {
    left: 0;
    transform: skew(45deg);
  }

  .curved-text::after {
    right: 0;
    transform: skew(-45deg);
  }
</style>